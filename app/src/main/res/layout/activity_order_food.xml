<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg_order_screen"
    android:alpha="0.9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderFood">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/border_bottom_left"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/detailImgFood"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/border_bottom_left"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/food_chooice" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/box_price"
        android:layout_width="400dp"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/price_box"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <LinearLayout
                android:id="@+id/details_food"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Risotto"
                    android:textStyle="bold"
                    android:textColor="@color/primary_app_color"
                    android:textSize="22sp"
                    />
                
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="more about food"
                    android:textColor="@color/secondary_app_color"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="10dp"
                    />
                
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressTint="@color/accent"
                    android:secondaryProgressTint="@color/white"
                    />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/qtyContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/qty_btn_bg"
                android:src="@drawable/ic_minus"
                app:tint="@color/accent"
                android:contentDescription="minus"
                android:padding="8dp"
                android:adjustViewBounds="true"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="01"
                android:textColor="@color/accent"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.05"/>

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/qty_btn_bg"
                android:src="@drawable/ic_plus"
                app:tint="@color/accent"
                android:contentDescription="plus"
                android:padding="8dp"
                android:adjustViewBounds="true"
                android:scaleType="center"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_price">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet consectetur. Gravida mauris nunc odio nibh adipiscing, Gravida mauris nunc odio nibh adipiscing, Gravida mauris nunc odio nibh adipiscing"
            android:textColor="@color/primary_app_color"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="7dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/price_box"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Price: "
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/tv_price_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#06D941"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:text="100$"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            
            <Button
                android:id="@+id/bt_buy"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                app:cornerRadius="6dp"
                android:text="Buy now"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bar_bottom"
        android:elevation="12dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:padding="10dp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:padding="10dp"/>

            <View
                android:id="@+id/indicator_profile"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Shop -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/market"
                android:padding="10dp"/>

            <View
                android:id="@+id/indicator_home"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/circle"
                android:visibility="visible"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Favorites -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/nav_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite"
                android:padding="10dp"/>

            <View
                android:id="@+id/indicator_fav"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>